{
  "name": "fundcontrol",
  "version": "1.0.0",
  "description": "API with mongoDb, express and mongoose for database connection.",
  "main": "src/index.ts",
  "repository": "https://github.com/GiuseppeDiniz/API-Nodejs",
  "author": "Giuseppe Diniz P. de Souza",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "yarn run build && node dist/server.js",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"ts-node-dev ./src/server.ts\"",
    "lint": "eslint . --fix",
    "test": "jest",
    "commit": "yarn lint && git add . && cz && git push"
  },
  "dependencies": {    
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": ">=8.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node-dev": "^2.0.0",
    "typescript": ">=4.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
